        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GameInfo"
                }
              }
            }
          },
          "": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GameState"
                }
              }
            }
          }
        },
        "operationId": "getGameState",
        "description": "Returns the status of a game",
        "parameters": [],
        "security": [
          {
            "Player Token Access": []
          }
        ]
      }
    },
    "/games/{game_id}/actions": {
      "get": {
        "summary": "Get games actions",
        "tags": [],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Action"
                  }
                }
              }
            }
          }
        },
        "operationId": "getActions",
        "security": [
          {
            "Host token access": []
          }
        ],
        "description": "Get all (**not robot related**) actions comitted to this game."
      },
      "parameters": [
        {
          "schema": {
            "type": "string"
          },
          "name": "game_id",
          "in": "path",
          "required": true
        }
      ],
      "put": {
        "summary": "Commit Action",
        "operationId": "commitAction",
        "responses": {
          "200": {
            "description": "OK"
          }
        },
        "description": "Queues an action to be executed",
        "requestBody": {
          "description": ""
        },
        "parameters": [
          {
            "schema": {
              "$ref": "#/components/schemas/ActionType"
            },
            "in": "query",
            "name": "action",
            "required": true
          }
        ],
        "security": [
          {
            "Host token access": []
          }
        ]
      }
    },
    "/games/{game_id}/updated": {
      "get": {
        "summary": "Is game changed",
        "tags": [],
        "responses": {
          "200": {
            "description": "Changed"
          },
          "304": {
            "description": "No change"
          }
        },
        "operationId": "getGameChange",
        "description": "***Deprecated***\n\nReturns true if the game had a change since the last time",
        "security": [
          {
            "Player Token Access": []
          }
        ]
      },
      "parameters": [
        {
          "schema": {
            "type": "string"
          },
          "name": "game_id",
          "in": "path",
          "required": true
        }
      ]
    },
    "/games/{game_id}/lazy_updated": {
      "parameters": [
        {
          "type": "string",
          "name": "game_id",
          "in": "path",
          "required": true
        }
      ],
      "get": {
        "summary": "Wait for game",
        "tags": [],
        "responses": {
          "200": {
            "description": "Changed"
          },
          "204": {
            "description": "No Content"
          }
        },
        "operationId": "waitForGameChange",
        "description": "This endpoint holds the conntection and does not respond (expect a timeout) until something in the game changed. To prevent timeout every 10 seconds all waiting clients are responded with a status 204 which does *not* means that the game changed. This is only the case if you get a *200* response code\n> do not use syncronized requests here (at least not in a thread/process you like to sleep for long times)"
      }
    },
    "/games/{game_id}/players/": {
      "parameters": [
        {
          "type": "string",
          "name": "game_id",
          "in": "path",
          "required": true
        }
      ],
      "get": {
        "summary": "Get all players",
        "tags": [],
        "responses": {
          "200": {
            "description": "OK",
